/* 首页样式 - 参考微信阅读 */

/* 头部区域 */
.header {
  padding: 30rpx;
  background: linear-gradient(135deg, #1aad19 0%, #1890ff 100%);
  color: white;
  border-radius: 0 0 20rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

.header .title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.header .subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 搜索栏 */
.search-container {
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  background: transparent;
  border: none;
}

/* 书籍分类标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 20rpx 20rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title::after {
  content: '查看全部';
  font-size: 24rpx;
  font-weight: normal;
  color: #1aad19;
}

/* 横向滚动书籍列表 */
.books-scroll {
  display: flex;
  padding: 0 20rpx 20rpx;
  gap: 24rpx;
  overflow-x: auto;
  scrollbar-width: none;
  -webkit-overflow-scrolling: touch;
}

.books-scroll::-webkit-scrollbar {
  display: none;
}

.book-item {
  width: 220rpx;
  flex-shrink: 0;
}

.book-cover {
  width: 220rpx;
  height: 300rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 12rpx;
  background: #f0f0f0;
}

.book-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.book-author {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 操作按钮区域 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
}

.btn-primary {
  flex: 1;
  background: #1aad19;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

.btn-secondary {
  flex: 1;
  background: white;
  color: #1aad19;
  border: 2rpx solid #1aad19;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 20rpx;
}

/* 底部间距 */
.container {
  padding-bottom: 120rpx;
}