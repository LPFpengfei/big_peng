/* 书架页样式 - 参考微信阅读 */

/* 头部搜索栏 */
.search-container {
  padding: 20rpx;
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  background: transparent;
  border: none;
}

/* 书架网格布局 */
.bookshelf-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  min-height: calc(100vh - 120rpx);
}

/* 书架书籍项 */
.bookshelf-item {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s, box-shadow 0.2s;
}

.bookshelf-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 书籍封面 */
.bookshelf-cover {
  width: 100%;
  height: 280rpx;
  background: #f0f0f0;
  display: block;
}

/* 书籍信息 */
.bookshelf-info {
  padding: 16rpx;
}

.bookshelf-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.bookshelf-author {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 阅读进度条 */
.reading-progress {
  margin-top: 12rpx;
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: #1aad19;
  border-radius: 3rpx;
  width: 0%;
  transition: width 0.3s ease;
}

/* 空书架提示 */
.empty-tip {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
  background: #f5f5f5;
  min-height: calc(100vh - 120rpx);
}

/* 添加书籍按钮 */
.add-books-btn {
  margin-top: 40rpx;
  background: #1aad19;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

/* 书架分类标签 */
.bookshelf-tabs {
  display: flex;
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
  overflow-x: auto;
  scrollbar-width: none;
}

.bookshelf-tabs::-webkit-scrollbar {
  display: none;
}

.tab-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #999;
  position: relative;
  white-space: nowrap;
}

.tab-item.active {
  color: #1aad19;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1aad19;
  border-radius: 2rpx;
}

/* 底部间距 */
.container {
  padding-bottom: 120rpx;
  background: #f5f5f5;
}