/* 发现页样式 - 参考微信阅读 */

/* 搜索栏 */
.search-container {
  padding: 20rpx;
  background: white;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  background: transparent;
  border: none;
}

/* 轮播图 */
.banner {
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.banner-image {
  width: 100%;
  height: 200rpx;
  display: block;
}

/* 分类导航 */
.category-nav {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.category-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

/* 书籍列表 */
.books-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 书籍项 */
.book-list {
  padding: 0 20rpx;
}

.book-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  align-items: center;
}

.book-item:last-child {
  border-bottom: none;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.book-info {
  flex: 1;
  min-width: 0;
}

.book-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.book-author {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.book-desc {
  font-size: 24rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

/* 添加按钮 */
.add-btn {
  background: #1aad19;
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.3);
}

/* 排行榜样式 */
.ranking-list {
  padding: 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.ranking-item:last-child {
  border-bottom: none;
}

.rank-number {
  font-size: 32rpx;
  font-weight: bold;
  width: 40rpx;
  text-align: center;
  margin-right: 20rpx;
}

.rank-number:nth-child(1) {
  color: #ff4d4f;
}

.rank-number:nth-child(2),
.rank-number:nth-child(3) {
  color: #faad14;
}

/* 底部间距 */
.container {
  background: #f5f5f5;
  padding-bottom: 120rpx;
}