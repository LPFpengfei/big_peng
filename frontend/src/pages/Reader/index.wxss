/* 阅读器页样式 - 参考微信阅读 */

/* 阅读器容器 */
.reader-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 0;
}

/* 书籍信息区域 */
.reader-header {
  background: white;
  padding: 40rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.reader-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 12rpx;
  display: block;
}

.reader-author {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  display: block;
  margin-bottom: 20rpx;
}

/* 书籍内容区域 */
.reader-content {
  background: white;
  margin: 20rpx;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
  text-align: justify;
  min-height: 600rpx;
  letter-spacing: 2rpx;
  word-break: break-word;
}

/* 阅读器底部工具栏 */
.reader-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
  z-index: 100;
}

/* 工具栏按钮 */
.reader-btn {
  flex: 1;
  background: #1aad19;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.3);
}

.reader-btn.secondary {
  background: white;
  color: #1aad19;
  border: 2rpx solid #1aad19;
  box-shadow: none;
}

.reader-btn.warn {
  background: #ff4d4f;
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.3);
}

/* 阅读进度条 */
.reading-progress {
  position: absolute;
  bottom: 120rpx;
  left: 20rpx;
  right: 20rpx;
  height: 8rpx;
  background: #e8e8e8;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: #1aad19;
  border-radius: 4rpx;
  width: 0%;
  transition: width 0.3s ease;
}

/* 阅读设置面板 */
.reader-settings {
  position: fixed;
  bottom: 160rpx;
  left: 20rpx;
  right: 20rpx;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.15);
  z-index: 110;
}

/* 字体大小调整 */
.font-size-setting {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.font-size-btn {
  width: 50rpx;
  height: 50rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
}

.font-size-value {
  font-size: 28rpx;
  color: #999;
}

/* 阅读主题选择 */
.theme-setting {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.theme-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: center;
}

.theme-item.active {
  border-color: #1aad19;
}

/* 目录面板 */
.chapter-list {
  position: fixed;
  top: 0;
  right: 0;
  width: 60%;
  height: 100vh;
  background: white;
  box-shadow: -4rpx 0 16rpx rgba(0, 0, 0, 0.15);
  z-index: 120;
  overflow-y: auto;
}

.chapter-item {
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
}

.chapter-item.active {
  color: #1aad19;
  font-weight: bold;
  background: #f5f5f5;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 105;
}

/* 章节切换按钮 */
.chapter-nav {
  position: fixed;
  top: 50%;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  z-index: 90;
}

.chapter-nav-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #e8e8e8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
  opacity: 0.6;
}

/* 点击区域 */
.tap-areas {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 80;
  display: flex;
}

.tap-area-left {
  flex: 1;
  /* 左侧点击区域，用于上一页 */
}

.tap-area-center {
  flex: 1;
  /* 中间点击区域，用于显示/隐藏工具栏 */
}

.tap-area-right {
  flex: 1;
  /* 右侧点击区域，用于下一页 */
}

/* 阅读时间和字数统计 */
.reader-stats {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 翻页动画 */
.page-transition {
  transition: transform 0.3s ease;
}

/* 底部间距 */
.container {
  padding-bottom: 120rpx;
}