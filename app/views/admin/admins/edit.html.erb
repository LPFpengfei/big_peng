<div class="card" style="max-width: 600px; margin: 0 auto;">
  <h2>编辑管理员</h2>

  <% if @admin.errors.any? %>
    <div class="form-errors">
      <h4><%= pluralize(@admin.errors.count, "个") %>错误:</h4>
      <ul>
        <% @admin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @admin, url: admin_admin_path(@admin), method: :patch, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, "姓名" %>
      <%= f.text_field :name, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, "邮箱" %>
      <%= f.email_field :email, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, "新密码（留空表示不修改）" %>
      <%= f.password_field :password %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "确认新密码" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="form-group">
      <%= f.submit "更新", class: "btn" %>
      <%= link_to "取消", admin_admins_path, class: "btn", style: "background: #95a5a6" %>
    </div>
  <% end %>
</div>
