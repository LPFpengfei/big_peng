<div class="card" style="max-width: 400px; margin: 100px auto;">
  <h2 style="text-align: center; margin-top: 0;">管理员登录</h2>

  <%= form_with url: admin_login_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email, "邮箱" %>
      <%= f.email_field :email, required: true, autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, "密码" %>
      <%= f.password_field :password, required: true %>
    </div>

    <div class="form-group">
      <%= f.submit "登录", class: "btn", style: "width: 100%" %>
    </div>
  <% end %>
</div>
