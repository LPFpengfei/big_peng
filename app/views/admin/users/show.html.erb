<%# 管理端用户详情页面 %>
<% content_for :title, "用户详情" %>

<div>
  <!-- 返回按钮 -->
  <div style="margin-bottom: 16px;">
    <%= link_to "返回用户列表", admin_users_path, class: "btn btn-secondary" %>
  </div>

  <!-- 用户基本信息 -->
  <div class="card" style="margin-bottom: 20px;">
    <h2 style="margin: 0 0 16px 0;">用户详情</h2>
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 16px;">
      <div>
        <strong>ID:</strong> <%= @user.id %>
      </div>
      <div>
        <strong>昵称:</strong> <%= @user.nickname %>
      </div>
      <div>
        <strong>邮箱:</strong> <%= @user.email %>
      </div>
      <div>
        <strong>创建时间:</strong> <%= @user.created_at.strftime('%Y-%m-%d %H:%M') %>
      </div>
      <div>
        <strong>更新时间:</strong> <%= @user.updated_at.strftime('%Y-%m-%d %H:%M') %>
      </div>
    </div>
  </div>

  <!-- 用户书架 -->
  <div class="card" style="margin-bottom: 20px;">
    <h2 style="margin: 0 0 16px 0;">用户书架</h2>
    
    <% if @bookshelves.any? %>
      <table>
        <thead>
          <tr>
            <th>书籍标题</th>
            <th>作者</th>
            <th>添加时间</th>
          </tr>
        </thead>
        <tbody>
          <% @bookshelves.each do |bookshelf| %>
            <tr>
              <td><%= bookshelf.book.title %></td>
              <td><%= bookshelf.book.author %></td>
              <td><%= bookshelf.created_at.strftime('%Y-%m-%d %H:%M') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p style="color: #666;">该用户还没有添加任何书籍到书架</p>
    <% end %>
  </div>

  <!-- 用户书签 -->
  <div class="card" style="margin-bottom: 20px;">
    <h2 style="margin: 0 0 16px 0;">用户书签</h2>
    
    <% if @bookmarks.any? %>
      <table>
        <thead>
          <tr>
            <th>书籍标题</th>
            <th>章节</th>
            <th>页码</th>
            <th>备注</th>
            <th>创建时间</th>
          </tr>
        </thead>
        <tbody>
          <% @bookmarks.each do |bookmark| %>
            <tr>
              <td><%= bookmark.book.title %></td>
              <td><%= bookmark.chapter %></td>
              <td><%= bookmark.page %></td>
              <td><%= bookmark.note || '-' %></td>
              <td><%= bookmark.created_at.strftime('%Y-%m-%d %H:%M') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p style="color: #666;">该用户还没有添加任何书签</p>
    <% end %>
  </div>

  <!-- 用户阅读进度 -->
  <div class="card" style="margin-bottom: 20px;">
    <h2 style="margin: 0 0 16px 0;">用户阅读进度</h2>
    
    <% if @reading_progresses.any? %>
      <table>
        <thead>
          <tr>
            <th>书籍标题</th>
            <th>章节</th>
            <th>页码</th>
            <th>更新时间</th>
          </tr>
        </thead>
        <tbody>
          <% @reading_progresses.each do |progress| %>
            <tr>
              <td><%= progress.book.title %></td>
              <td><%= progress.chapter %></td>
              <td><%= progress.page %></td>
              <td><%= progress.updated_at.strftime('%Y-%m-%d %H:%M') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p style="color: #666;">该用户还没有任何阅读进度记录</p>
    <% end %>
  </div>
</div>